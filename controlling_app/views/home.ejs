<% if (messages.error) { %>
    <%= messages.error %>
  <% } %>
  
  <!DOCTYPE html>
  <html>
  <head>
      <meta charset="utf-8">
      <meta http-equiv="x-ua-compatible" content="ie=edge">
      <title>Dashboard</title>
      <meta name="description" content="">
      <meta name="viewport" content="width=device-width, initial-scale=1">
  
      <link rel="stylesheet" href="//brick.a.ssl.fastly.net/Roboto:400"/>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
      <link rel="stylesheet" href="stylesheets/style.css">
      <link rel='stylesheet' href='stylesheets/home.css'>
      <script src="main.js"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  </head>
  
  <body>   
    <div class="container">
        <h1 class="display-1" id="title">
            Device List
        </h1>
       
      <div class="grid-container" >
        <% for (var i = 0; i < data.length; i++) { %>
            <div class="row">
                <h2 class="display-8 col-sm-6"><%= data[i].display_name %></h2>
                <a class="col-sm-6 btn btn-md btn-block btn-secondary" href="/info/<%= data[i].id %>">MORE</a>
                <p class="lead col-sm-6">Status: <%= data[i].light_state ? `ON` : `OFF` %></p>
                <p class="lead col-sm-6">Occupants: <%= data[i].number_of_people %></p>
            </div>
        <% } %>    
        
        <a class="btn btn-lg btn-block btn-primary" onclick="openForm()">add room</a>
        <div class="form-popup" id="newroom">

          <form class="form-container" method="POST" action="/new">            
            <label for="roomName"><b>Room Name</b></label>
            <input type="text" id ="roomName" name="roomName" placeholder="Enter Room Name" required>            
            <input type="submit" button type="submit" class="btn">          

            <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
          </form>          
        </div>
      </div> 
    
      <!-- <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/157293/light_on.jpg" width="0" height="0" alt="" /> -->    
    </div>

    <script>
    function openForm() {
      document.getElementById("newroom").style.display="block";
    }    
    function closeForm() {
      document.getElementById("newroom").style.display="none";
    }
    </script>    


  </body>
  </html>
